@model IEnumerable<SistemaIndicadoresAmbientales.Entity.Equipo>

@{
    ViewBag.Title = "Index";
}

<div id="Etiqueta">
    <h1 class="H1-Etiqueta">Equipos Menores</h1>
</div>

<div style="margin: 0 auto; width: 25%;">
    @if (TempData["success"] != null)
    {
        TempData.Remove("success");
        <spam class="text-success">Equipo Menor Eliminado satisfactoriamente.</spam>
    }
    @if (TempData["error"] != null)
    {
        TempData.Remove("error");
        <spam class="text-danger">Error! No se pudo eliminar el Equipo Menor</spam>
    }
</div>

<p>
    @Html.ActionLink("Agregar un Equipo o Vehiculo", "RegistrarEquipoView")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            <label for="id_activo_placa">No. Activo</label>
            @*@Html.DisplayNameFor(model => model.id_activo_placa)*@
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.id_planta)
        </th>*@
        @*<th>
                @Html.DisplayNameFor(model => model.)
            </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.id_activo_placa)
            </td>

            @*<td>
                @Html.DisplayFor(modelItem => item.id_planta)
            </td>*@

            <td>
                @Html.ActionLink("Eliminar", "EliminarEqMenor", new { id = item.id_activo_placa }, new { onclick = "return confirm('Seguro que desea eliminar esta planta: " + item.id_activo_placa + "');" })
            </td>
        </tr>
    }
    <tr>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
    </tr>

</table>

@if (Session["rol"] != null)
{
    if (Session["rol"].ToString().Equals("Administrador") || Session["rol"].ToString().Equals("Encargado de Planta") || Session["rol"].ToString().Equals("Asistente SIG - Operación"))
    {
        @model SistemaIndicadoresAmbientales.Models.CompostSalidaModel

        using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <div id="Etiqueta">
                    <h1 class="H1-Etiqueta">Registrar Salida de Compost</h1>
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div id="Formulario">
                    <div class="Formulario">
                        <label id="Cantidad" value="Cantidad" name="Cantidad" class="control-label">Cantidad: </label>
                        <input type="text" id="Cantidad" name="Cantidad" class="form-control" />

                    </div>
                    <div class="Formulario">
                        <input type="hidden" value="1" id="Id_planta" name="Id_planta" />
                    </div>
                    <div>
                        <div style="text-align: center;">
                            <input value="Ingresar" id="ingresar" name="Registrar" type="submit" class="from-control">
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        Response.Redirect("~/Home/Error", false);
    }//else
}
else
{
    Response.Redirect("~/Home/Error", false);
}
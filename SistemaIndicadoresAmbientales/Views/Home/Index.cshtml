
@{
    ViewBag.Title = "Home";
}

<div>
    <div id="Etiqueta">
        <h1 class="H1-Etiqueta">Sistema Indicadores Ambientales</h1>
    </div>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Wrapper for slides -->
        <div class="carousel-inner">

            <div class="item active">
                <img src="~/Public/images/img_planta_1.jpg" alt="img_planta_1" style="width:100%;">
            </div>

            <div class="item">
                <img src="~/Public/images/img_planta_2.jpg" alt="img_planta_2" style="width:100%;">
            </div>

            <div class="item">
                <img src="~/Public/images/img_planta_3.jpg" alt="img_planta_3" style="width:100%;">
            </div>

            <div class="item">
                <img src="~/Public/images/img_planta_4.jpg" alt="img_planta_4" style="width:100%;">
            </div>

            <div class="item">
                <img src="~/Public/images/img_planta_5.jpeg" alt="img_planta_5" style="width:100%;">
            </div>

            <div class="item">
                <img src="~/Public/images/img_planta_6.jpeg" alt="img_planta_6" style="width:100%;">
            </div>
            
        </div>

        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Anterior</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Siguiente</span>
        </a>
    </div>
</div>